<head>
		<title>Home | Renter.com</title>
</head>

<h1>Home Page</h1>
<% if user_signed_in? %>
<div id = "products">
	<% @products.each do |product| %>
		<% if product.available and current_user.id != Integer(product.owner_id) %>
			<div class = "prod">
			<h2><%= product.name %></h2>
			<p><%= product.description %></p>
			<br/>
			<%= image_tag product.img %> <br/>
			<p> Price: $<%= product.price %></p> <br/>
			<hr>
			<b><%= product.name %></b> <br/>
			<%= product.description %> <br/>
			<br>
			<% if product.img %>
				<%= image_tag product.img %> <br/>
			<% end %>
			Price: $<%= number_with_precision(product.price, :precision => 2) %>/day <br/>
			<%= link_to "Product Details", product_path(:id => product.id) %>
			</div>
		<% end %>
	<% end %>
</div>

<% else %>
	<%= link_to "Sign in", users_path %><br />
<% end %>
<hr>
