<head>
		<title> <%= current_user.username.capitalize %>'s Profile | Renter.com</title>
</head>

<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<style type="text/css">
  .alert-success{
    color: green;
  }
  .alert-danger{
    color: red;
  }
</style>

<% if current_user.username %>
	<h1><%= current_user.username.capitalize %>'s Profile</h1>
<% else %>
	<p><%= link_to 'Create a Username', username_path %></p>
<% end %>
<h2> Email: <%= current_user.email %></h2>

<% if current_user.balance == 0 %>
	<p><%= link_to 'Add Balance', add_balance_path %></p>
<% else %>
	<h2> Balance: $<%= current_user.balance %></h2>
	<p><%= link_to 'Add Balance', add_balance_path %></p>
<% end %>
<h2> Products: <br> </h2>
<%if @products %>
  <% if @products.kind_of?(Array) %>
    <% @products.each do |prod| %>
      <p>Name: <%=prod[:name]%>
      Price: <%=prod[:price]%></p>
      <%end%>
  <%else%>
      <p>Name: <%=@products[:name]%> <br>
      Price: $<%=@products[:price]%>/week</p>
	<%end%>
<% end %>

<h2> Transactions: <br> </h2>
  <p><% if @transactions.kind_of?(Array) %>
    <% @transactions.each do |prod| %>
      Name: <%=Product.find_by(id: prod[:product_id])[:name]%>
      Price: <%=Product.find_by(id: prod[:product_id])[:price]%>
      Current?: <%=Product.find_by(id: prod[:product_id])[:status]%>
      <%end%>
  <%elif @transactions%>
      Name: <%=Product.find_by(id: @transactions[:product_id])[:name]%> <br>
      Price: <%=Product.find_by(id: @transactions[:product_id])[:price]%>
<%end%></p>

<p><%= link_to 'Create a new product', product_new_path %></p>
